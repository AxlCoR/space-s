<nav class="navbar navbar-expand-md navbar-dark fixed-top" id="banner">
    <div class="container">
        <!-- Brand -->
        <a class="navbar-brand" href="/"><span><img src="/images/spacelogo.png" id="imageLogo"></span></a>

        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a  class="nav-link" id="roleColor">
                           
                            <i class="roleName" aria-hidden="true"></i>
                                
                          
                            </a>
                </li>
                <li class="nav-item">
                    <a href="/user/orders/" class="nav-link">
                            {{# if login}}
                            <i class="fa fa-cubes" aria-hidden="true"></i> Orders
                                
                            {{/if}}
                            </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/add-books/">
                    {{# if login}}
                        <i class="fa fa-book" aria-hidden="true"></i> Add Book
                    {{/if}}
                    </a>
                </li>
        
                <li class="nav-item">
                    <a class="nav-link" href="/shopping-cart/">
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i> Cart
                        <span class="badge badge-danger" id="badge">{{session.cart.totalQty}}</span>
                    </a>
                </li> 
                <!-- Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Menu
                    </a>
                    <div class="dropdown-menu">
                        {{# if login}}
                            <a class="dropdown-item" href="/user/profile">User Account</a>
                            <a class="dropdown-item" href="/user/logout">Logout</a>
                            <a class="dropdown-item" >Role: {{ user.role}}</a>
                            {{ else }}
                            <a class="dropdown-item" href="/user/signup">Sign Up</a>
                            <a class="dropdown-item" href="/user/signin">Sign In</a>
                            <a class="dropdown-item" >Role: {{ user.role}}</a>
                        {{/if}}
                        
                    </div>
                </li>
            </ul>
        </div>
	</div>
</nav>
