<img src="/images/spceSub.png" id="imagespaceSub">
<div class="row">
    <div class="col-sm-6 col-md-6 col-lg-4 col-md-offset-4 col-sm-offset-5">
        <h1>Sign In</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages}}
                    <p>{{ this }}</p>
                {{/each}}
            </div>
        {{/if}}
        <h3 id="loginTitle">LOGIN TO YOUR ACCOUNT</h3>
        <div class="myform form ">
            <form action="/user/signin" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" name="email"  class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Password</label>
                    <input type="password" name="password" id="password"  class="form-control" aria-describedby="emailHelp" placeholder="Enter Password">
                </div>
                
                <div class="col-md-12 text-center ">
                    <button type="submit" class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 loginBtn">Login</button>
                </div>
                <div class="col-md-12 ">
                    <div class="login-or">
                        <hr class="hr-or">
                        <span class="span-or">or</span>
        
                    </div>
                </div>
                
                <div class="col-md-12 text-center ">
                    <a href="/user/signup"  class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 signupBtn">Sign Up</a>
  
                </div>
                
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
            
        </form>
        </div>
    </div>
</div>