<img src="/images/spceSub.png" id="imagespaceSub">
{{# if products }}
<div class="card">
  <div class="card-body">
      </div>
    <div class="row" >
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products }}

                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        
                        <tbody> 
                            
                            <tr>
                                <td>
                                    <button class="btn-view-fund btn btn-default btn-xs  pull-left" type="button">
                                        <span class="badge" id="qtyBadge">{{ this.qty }}</span>
                                    </button>    
                                </td>
                                <td>
                                      <img src="{{ this.item.imagePath }}" alt="..." class="img-cart"> 
                                </td>

                                <td colspan="4" id="titleTd"><strong>{{ this.item.title }}</strong></td>
                                <td style="text-align: right;">
                                    <button class="btn-view-fund btn btn-default btn-xs" type="button">
                                        <a href="/remove/{{this.item._id}}"><span class="glyphicon glyphicon-remove" aria-hidden="true" ></span></a>
                                    </button>  
                                    <button class="btn-view-fund btn btn-default btn-xs" type="button">
                                        <a href="/reduce/{{this.item._id}}"><span class="glyphicon glyphicon-list" aria-hidden="true" ></span></a>
                                    </button>    
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                    
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" id="totalPrice">
            <strong>Total: ${{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout"><button type="button" class="btn btn-secondary btn-lg btn-block" id="btnCheckout">CHECKOUT</button></a>
            
        </div>
    </div>
  </div>

{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <img src="http://hombell.com/images/empty-cart.png" id="emptyImage">
            <h2 id="noItems">No Items in Cart</h2>
        </div>
    </div>
{{/if}}

